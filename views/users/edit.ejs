<%- include("../partials/header") %>

<div class="row">
    <h1 style="text-align: center">Edit your profile</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/users/<%= user._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<label for="firstName">First Name</label>
                <input class="form-control" type="text" name="user[firstName]" id="firstName" value="<%= user.firstName %>">
            </div>
			<div class="form-group">
				<label for="lastName">Last Name</label>
                <input class="form-control" type="text" name="user[lastName]" id="lastName" value="<%= user.lastName %>">
            </div>
			<div class="form-group">
				<label for="email">E-mail Address</label>
                <input class="form-control" type="email" name="user[email]" id="email" value="<%= user.email %>">
            </div>
			<div class="form-group">
				<label for="avatar">Profile Picture URL</label>
                <input class="form-control" type="text" name="user[avatar]" id="avatar" value="<%= user.avatar %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Edit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<%- include("../partials/footer") %>